<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->


        <item name="colorAccent">@color/yellow_800</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorPrimary">@color/yellow_800</item>
        <item name="colorPrimaryVariant">@color/actionbar</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="DatePickerDialog" parent="Base.Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/yellow_800</item>
        <item name="colorPrimaryDark">@color/teal_800</item>
        <item name="colorPrimary">@color/teal_700</item>
    </style>

